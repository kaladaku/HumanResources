<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notice Board"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Notice"
        android:id="@+id/button4"
        android:onClick="create"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW NOTICES"
        android:id="@+id/button6"
        android:onClick="gets"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="32dp"
        android:hint="Enter notice here"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notices"
        android:id="@+id/textView2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="NO NOTICE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="28dp"
        android:id="@+id/text_note3" />

    <TextView
        android:text="NO NOTICE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_note3"
        android:layout_alignLeft="@+id/text_note3"
        android:layout_alignStart="@+id/text_note3"
        android:layout_marginTop="31dp"
        android:id="@+id/text_note4" />

    <TextView
        android:text="NO NOTICE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_note5"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/text_note4"
        android:layout_alignLeft="@+id/text_note4"
        android:layout_alignStart="@+id/text_note4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO NOTICE"
        android:id="@+id/textView4"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO NOTICE"
        android:id="@+id/textView3"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>